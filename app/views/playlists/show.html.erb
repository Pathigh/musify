<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>

<%= link_to 'Edit', edit_playlist_path(@playlist) %> |
<%= link_to 'Back', playlists_path %>


<hr>
<%= form_with(model: [@playlist, @song], local: true) do |f| %>
 
 <%= f.label :artist %>
 <%= f.text_field :artist %>

<%= f.label :name %> 
<%= f.text_field :name %>

 <%= f.submit :guardar %>
<% end %>

<ul>
<% @canciones.each do |cancion|%>
<li>
	<%= cancion.artist %>
</li>
<li>
	<%= cancion.name %>
</li>
<td><%= link_to 'Destroy', playlist_song_path(@playlist, cancion), method: :delete, data: { confirm: 'Are you sure?' } %></td>
<% end %>

</ul>
