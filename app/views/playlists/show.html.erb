<p id="notice"><%= notice %></p>
<div class="container">
<p>
  <strong>Name:</strong>
  <%= @playlist.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @playlist.user.name %>
</p>

<%= link_to 'Edit', edit_playlist_path(@playlist),class: "btn btn-light" %> |
<%= link_to 'Back', playlists_path, class: "btn btn-light" %>


<hr>
<%= form_with(model: [@playlist, @song], local: true) do |f| %>
 
 <%= f.label :artist %>
 <%= f.text_field :artist %>

<%= f.label :name %> 
<%= f.text_field :name %>

 <%= f.submit :guardar %>
<% end %>
<table class = "table table-striped">
	<thead>
    <tr>
      <th>Artista</th>
      
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @canciones.each do |cancion|%>
<tr>
	<td><%= cancion.artist %></td>
	
<td><%= cancion.name %></td>
	

<td><%= link_to 'Borrar', playlist_song_path(@playlist, cancion), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
<% end %>

</tr>
</table>
