<p id="notice"><%= notice %></p>
<div class="container">
<h1>Playlists</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Usuario</th>
      <th>Canciones</th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.user.name %></td>
         <td><%= playlist.songs.count %></td>

        <td><%= link_to 'Show', playlist, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path, class: "btn btn-primary"%>
</div>